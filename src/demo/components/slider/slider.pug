mixin slider({ isRange, isVertical, start, end, step, scaleStep, color, prefix, hasTagmark, values,  } = {})
  .slider.js-slider(
    data-is-range=isRange
    data-is-vertical=isVertical
    data-start=start
    data-end=end
    data-step=step
    data-scale-step=scaleStep
    data-color=color
    data-prefix=prefix
    data-has-tagmark=hasTagmark
    data-values=values
  )