doctype html

block variables
  - const isProdEnv = htmlWebpackPlugin.options.currentEnv === 'production';

html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='keywords' content=keywords)
    meta(name='description' content=description)
    link(
      rel='apple-touch-icon',
      sizes='120x120',
      href='favicons/apple-touch-icon-120.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='16x16',
      href='favicons/favicon-16.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='32x32',
      href='favicons/favicon-32.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='48x48',
      href='favicons/favicon-48.png'
    )
    if isProdEnv
      link(
        rel = 'stylesheet'
        href = 'perfectSlider.min.css'
      )

    title Favorite Plugin
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    block content
      include ./components/sample/sample

      main.demo
        .demo__item.js-demo__item
          +sample({
            settings: {
              isRange: 'true',
              start: -80,
              end: 40,
              step: 20,
              scaleStep: 20,
              from: 0,
              to: 40,
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              start: -80,
              end: 40,
              prefix: '$',
              to: 0,
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              values: ['jan', 'feb', 'march', 'apr', 'may'],
              color: 'linear-gradient(yellow 0, red 100%)',
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              isVertical: 'true',
              hasTagmark: 'false',
            }
          })

    script(
      src = 'https://code.jquery.com/jquery-3.5.1.min.js'
      integrity = 'sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0='
      crossorigin = 'anonymous'
    )
    script(
      src = 'js/perfectSlider.js'
    )
