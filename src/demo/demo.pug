doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='keywords' content=keywords)
    meta(name='description' content=description)
    link(
      rel='apple-touch-icon',
      sizes='120x120',
      href='favicons/apple-touch-icon-120.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='16x16',
      href='favicons/favicon-16.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='32x32',
      href='favicons/favicon-32.png'
    )
    link(
      rel='shortcut icon',
      type='image/png',
      sizes='48x48',
      href='favicons/favicon-48.png'
    )
    title Favourite Plugin
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    block content
      include ./components/sample/sample

      main.demo
        .demo__item.js-demo__item
          +sample({
            settings: {
              isRange: 'true',
              start: -80,
              end: 40,
              step: 20,
              scaleStep: 20,
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              start: -80,
              end: 40,
              prefix: '$',
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              values: ['jen', 'feb', 'march', 'apr', 'may'],
              color: 'linear-gradient(yellow 0, red 100%)',
            }
          })
        .demo__item.js-demo__item
          +sample({
            settings: {
              isVertical: 'true',
              hasTagmark: 'false',
            }
          })
